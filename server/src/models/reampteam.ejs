<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Delete Confirmation Popup</title>
<style>
    /* Optional: Some basic styles for better appearance */
    .container {
        padding: 20px;
        text-align: center;
    }
    button {
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
    }
</style>
</head>
<body>
<div class="container">
    <h2>Delete Confirmation Popup Example</h2>
    <button id="deleteButton">Delete Item</button>
</div>

<script>
    // Get reference to the delete button
    const deleteButton = document.getElementById('deleteButton');

    // Add event listener for click event
    deleteButton.addEventListener('click', function() {
        // Display confirmation dialog
        const confirmed = confirm('Are you sure you want to delete this item?');

        // Check user's choice
        if (confirmed) {
            // Perform delete operation or navigate to delete endpoint
            // Example: window.location.href = '/delete';
            alert('Item deleted successfully.'); // Replace with your delete logic
        } else {
            // Optionally, handle cancel action
            alert('Delete action canceled.');
        }
    });
</script>
</body>
</html>
